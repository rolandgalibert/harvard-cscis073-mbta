<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinalProject.BikeParkingResultsPage2"
             Title="Bike Parking Facilities">
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness" iOS="10, 20, 10, 0" Android="10, 0" WinPhone="10, 0" />
    </ContentPage.Padding>

    <ListView x:Name="facilityResults" ItemsSource="facilities">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <StackLayout
                         Padding="10">
                        <Label
                            x:Name="stopIDLabel" 
                            Text="{Binding stop_id}"/>
                        <Label
                            x:Name="nameLabel"
                            Text="{Binding name}"/>
                    </StackLayout>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>